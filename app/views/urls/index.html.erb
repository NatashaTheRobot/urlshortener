<h1>Listing urls</h1>

<table>
  <tr>
    <th>Long url</th>
    <th>Short url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @urls.each do |url| %>
  <tr>
	<td><%= link_to url.long_url, url.long_url %> </td>
    <td><%= link_to "#{root_url}#{url.short_url_slug}", url.long_url %></td>
    <td><%= link_to 'Show', url %></td>
    <td><%= link_to 'Edit', edit_url_path(url) %></td>
    <td><%= link_to 'Destroy', url, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

